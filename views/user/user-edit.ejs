<div class="container">
    <h1>Edit <%= user.fname %> <%= user.lname%> Profile</h1>
    <form method="POST" action="/user/edit">
        <div class="form-group">
            <label for="fname">First Name</label>
            <input type="text" name="fname" class="form-control" value="<%= user.fname%>">
        </div>
        <div class="form-group">
            <label for="lname">Last Name</label>
            <input type="text" name="lname" class="form-control" value="<%=user.lname%>">
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" name="email" class="form-control" value="<%= user.email %>">
        </div>
        <div class="form-group">
            <label for="gender">Gender</label>
            <select name="gender" id="">
                <option hidden selected value="<%= user.gender%>"><%= user.gender%></option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Non-Binary">Non-Binary</option>
            </select>
        </div>
        <div class="form-group">
            <label for="sport">Sport</label>
            <select name="sport" id="">
                <option hidden selected value="<%= user.sport%>"><%= user.sport%></option>
                <option value="Ultimate Frisbee">Ultimate Frisbee</option>
                <option value="Basketball">Basketball</option>
                <option value="Volleyball">Volleyball</option>
            </select>
        </div>
        <div class="form-group">
            <label for="skill_level">Skill Level</label>
            <select name="skill_level" id="">
                <option hidden selected value="<%= user.skill%>"><%= user.skill%></option>
                <option value="Beginner">Beginner</option>
                <option value="Intermediate">Intermediate</option>
                <option value="Advanced">Advanced</option>
            </select>
        </div>
        <div class="form-group">
            <label for="dob">Date of Birth</label>
            <input type="date" name="dob" id="" value="<%= user.dob %>">
        </div>
        <button type="submit" class="btn btn-success">Submit</button>
    </form>
</div>