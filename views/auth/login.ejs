<section class="vh-100 gradient-custom">
<div class="py-5 h-100">
    <div class="col-md-6 m-auto">
      <div class="login-page card bg-dark text-white text-center">
        <h1 class="mb-3">
        </h1>
        <h2>Login</h2>
        <form action="/login" method="POST">
          <div class="form-outline form-white mb-4 px-5">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control form-control-lg"
              placeholder="Enter Email"
            />
          </div>
          <div class="form-outline form-white mb-4 px-5">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Enter Password"
            />
          </div>
          <button type="submit" class="btn btn-outline-light btn-lg px-5">Login</button>
        </form>
        <p class="mt-4">New User? <a href="/register">Register</a></p>
      </div>
    </div>
  </div>
</section>