<div class="container">
    <% if(user.isManager === true) {%>
    <form action="/teams" method="post">
    <div class="form-group">
        <label for="name">Team Name</label>
        <input required type="text" class="form-control" id="nameInput" placeholder="Name" name="name">
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea required class="form-control" id="descriptionInput" rows="3" placeholder="Description" name="description"></textarea>
    </div>
    <div class="form-group">
        <label for="sport">Sport</label>
        <select required name="sport">
            <option class="form-control" value="Ultimate Frisbee">Ultimate Frisbee</option>
            <option class="form-control" value="Badminton">Badminton</option>
            <option class="form-control" value="Basketball">Basketball</option>
        </select>
    </div>
    <div class="form-group">
        <label for="skill_level">Skill Level</label>
        <select required name="skill_level">
            <option class="form-control" value="Beginner">Beginner</option>
            <option class="form-control" value="Intermediate">Intermediate</option>
            <option class="form-control" value="Advanced">Advanced</option>
        </select>
    </div>
    <div class="form-group">
        <div class="form-check">
            <input checked class="form-check-input" type="radio" name="competitive">
            <label class="form-check-label" for="competitive">Competitive</label>
        </div>
        <div class="form-check">
            <input type="radio" name="competitive">
            <label class="form-check-label" for="recreational">Recreational</label>
        </div>
    </div>
    <div class="form-group">
        <label for="player_count">Player Count</label>
        <input required class="form-control" type="number" name="player_count" min="1" max="99">
    </div>
    <div class="form-group">
        <label for="location">Location</label>
        <input required class="form-control" type="text" name="location">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
    </form>
    <% } else {%>
        <h1>Not a Manager</h1>
    <%}%>
</div>