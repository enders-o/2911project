<div class="container">
    <h1 style="text-align:center">Registered Teams</h1>
    <% teams.forEach((item, index)=> { %>
        <button class="btn btn-outline-info btn-lg btn-block" style="background-color: lightskyblue;"
            data-toggle="collapse" data-target="#collapseExample<%= index %>" aria-expanded="false"
            aria-controls="collapseExample<%= index %>">
            <h2>
                <%= item.name %>
            </h2>
            <p>Sport: <%= item.sport%>
            </p>
            <p>Number of players: <%= item.player_count %>
            </p>

        </button>
        <div class="collapse" id="collapseExample<%= index %>">
            <p>Description: <%= item.description %>
            </p>
            <p>Skill Level: <%= item.skill_level %>
            </p>
            <p>Location: <%= item.location%>
            </p>
            <a class="text-danger" href=<%="/teams/" + item.id %>>Click here for more information about <%= item.name%></a>
        </div>
        <% }) %>

</div>