<section style="background-color: #eee;">
  <div class="container py-5">
    <h1>Player Profile</h1>
      <div class="row">
      <div class="col-lg-4">
          <div class="card mb-4">
          <div class="card-body text-center">
              <img src="<%= player.picture%>" alt="avatar"
              class="rounded-circle img-fluid" style="width: 150px;">
              <h5 class="my-3"><%= player.fname%></h5>
              <p class="text-muted mb-1"><%= player.sport%> Enthusiast</p>
              <p class="text-muted mb-4">Vancouver, BC</p>
          </div>
          </div>
          <div class="card mb-4 mb-lg-0">
          <div class="card-body p-0">
              <ul class="list-group list-group-flush rounded-3">
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                  <i class="fas fa-globe fa-lg text-warning"></i>
                  <p class="mb-0"><%=player.social_link%></p>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center p-3">
                  <i class="fas fa-user fa-lg" style="color: #333333;"></i>
                  <p class="mb-0">jd_github</p>
              </li>
              </ul>
          </div>
          </div>
      </div>
      <div class="col-lg-8">
          <div class="card mb-4">
          <div class="card-body">
              <div class="row">
              <div class="col-sm-3">
                  <p class="mb-0">Full Name</p>
              </div>
              <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= player.fname%> <%= player.lname%></p>
              </div>
              </div>
              <hr>
              <div class="row">
                  <div class="col-sm-3">
                  <p class="mb-0">Sport</p>
                  </div>
                  <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= player.sport%></p>
                  </div>
              </div>
              <hr>
              <div class="row">
              <div class="col-sm-3">
                  <p class="mb-0">Email</p>
              </div>
              <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= player.email%></p>
              </div>
              </div>
              <hr>
              <div class="row">
              <div class="col-sm-3">
                  <p class="mb-0">Phone</p>
              </div>
              <div class="col-sm-9">
                  <p class="text-muted mb-0">(097) 234-5678</p>
              </div>
              </div>
              <hr>
              <div class="row">
              <div class="col-sm-3">
                  <p class="mb-0">Skill</p>
              </div>
              <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= player.skill%></p>
              </div>
              </div>
              <hr>
              <div class="row">
              <div class="col-sm-3">
                  <p class="mb-0">Date of Birth</p>
              </div>
              <div class="col-sm-9">
                  <p class="text-muted mb-0"><%= player.dob%></p>
              </div>
              </div>
          </div>
          </div>
      </div>
      </div>
  </div>
</section>