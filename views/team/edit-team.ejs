<div class="container">
    <h1 class="page-header">Edit</h1>
    <form method="POST" action=<%= "/teams/delete/" +teamItem.id %>>
        <button type="submit" class="btn btn-danger">Delete</button>
    </form> 
    <form action=<%= "/teams/update/" + teamItem.id %> method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" class="form-control" value="<%= teamItem.name%>">
        </div>
        <div class="form-group">
            <label for="title">Description</label>
            <textarea class="form-control" rows="3" name="description" value="<% teamItem.description %>"><%= teamItem.description%></textarea>
        </div>
    <div class="form-group">
        <label for="sport">Sport</label>
        <select name="sport" selected="">
            <option class="form-control" value="Ultimate Frisbee">Ultimate Frisbee</option>
            <option class="form-control" value="Badminton">Badminton</option>
            <option class="form-control" value="Basketball">Basketball</option>
        </select>
    </div>
    <div class="form-group">
        <label for="skill_level">Skill Level</label>
        <select name="skill_level">
            <option class="form-control" value="Beginner">Beginner</option>
            <option class="form-control" value="Intermediate">Intermediate</option>
            <option class="form-control" value="Advanced">Advanced</option>
        </select>
    </div>
    <div class="form-group">
        <label for="competitive">Competitive or Recreational?</label>
        <input type="radio" name="competitive" value="Competitive">Competitive<br>
        <input type="radio" name="competitive" value="Recreational">Recreational<br>
    </div>
    <div class="form-group">
        <label for="player_count">Player Count</label>
        <input class="form-control" type="number" name="player_count" min="1" max="99" value="<%= teamItem.player_count%>">
    </div>
    <div class="form-group">
        <label for="manager_name">Manager Name</label>
        <input class="form-control" type="text" name="manager_name" value="<%= teamItem.manager_name%>">
    </div>
    <div class="form-group">
        <label for="manager_email">Manager Email</label>
        <input class="form-control" type="email" name="manager_email" value="<%= teamItem.manager_email%>">
    </div>
    <div class="form-group">
        <label for="location">Location</label>
        <input class="form-control" type="text" name="location" value="<%= teamItem.location%>">
    </div>
    <button type="submit" class="btn btn-default">Submit</button>

    </form>
</div>